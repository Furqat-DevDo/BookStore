<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>BookStore - Home</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="img/favicon.png" rel="icon" asp-append-version="true">
    <link href="img/apple-touch-icon.png" rel="apple-touch-icon" asp-append-version="true">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    
    <link href="@Url.Content("~/vendor/aos/aos.css")" rel="stylesheet" asp-append-version="true" />
    <link href="@Url.Content("~/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" asp-append-version="true">
    <link href="@Url.Content("~/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet" asp-append-version="true">
    <link href="@Url.Content("~/vendor/boxicons/css/boxicons.min.css")" rel="stylesheet" asp-append-version="true">
    <link href="@Url.Content("~/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet" asp-append-version="true">
    <link href="@Url.Content("~/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet" asp-append-version="true">

    <!-- Template Main CSS File -->
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" asp-append-version="true">
    

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
 
<i class="bi bi-list mobile-nav-toggle d-lg-none"></i>
<!-- ======= Header ======= -->
<header id="header" class="d-flex flex-column justify-content-center">

    <nav id="navbar" class="navbar nav-menu">
        <ul>
            <li><a href="@Url.Action("Home","Book")" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
            <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
            <li><a href="#resume" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Resume</span></a></li>
            <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Portfolio</span></a></li>
            <li><a href="#services" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Services</span></a></li>
            <li><a href="@Url.Action("Contact","Book")" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
        </ul>
    </nav><!-- .nav-menu -->

</header><!-- End Header -->

<div class="container">

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

</div>

@await RenderSectionAsync("Scripts", required: false)

<div id="preloader"></div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
<script src="@Url.Content("~/vendor/purecounter/purecounter_vanilla.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/aos/aos.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.bundle.min.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/glightbox/js/glightbox.min.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/isotope-layout/isotope.pkgd.min.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/swiper/swiper-bundle.min.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/typed.js/typed.umd.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/waypoints/noframework.waypoints.js")" asp-append-version="true"></script>
<script src="@Url.Content("~/vendor/php-email-form/validate.js")" asp-append-version="true"></script>


<!-- Template Main JS File -->
<script src="@Url.Content("~/js/main.js")" asp-append-version="true"></script>

<footer id="footer">
    <div class="container">
        <h3>Ilmhub Book Store</h3>
        <div class="social-links">
            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
        </div>
        <div class="copyright">
            &copy; Copyright <strong><span>BookStore</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="">IlmHub Made</a>
        </div>
    </div>
</footer><!-- End Footer -->

</body>
</html>
