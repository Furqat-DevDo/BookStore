@model  CreateBookViewModel
@inject IViewLocalizer Localizer
@inject IGenreManager Manager

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var genres = await Manager.GetGenresAsync();
}

<div class="form-container">
    <form asp-action="Create" asp-controller="Book" method="post" class="custom-form">
        <div class="row mb-4">
            <div class="col">
                <div class="form-outline">
                    <input type="text" asp-for="Name" class="form-control" />
                    <label class="form-label">@Localizer["Book name"]</label>
                </div>
            </div>
            <div class="col">
                <div class="form-outline">
                    <input type="text" asp-for="WriterName" class="form-control" />
                    <label class="form-label">@Localizer["Writer Name"]</label>
                </div>
            </div>


            <div class="col-12">
                <label class="visually-hidden" asp-for="GenreList">@Localizer["Genres"]</label>
                <select class="select">
                    @foreach (var genre in genres)
                    {
                        <option value="@genre.Name">@genre.Name</option>
                    }
                </select>
            </div>

            <div class="col">
                <label class="form-label">@Localizer["Book cover image"]</label>
                <div class="form-outline mb-4">
                    <input type="file" asp-for="CoverImage" class="form-control" />
                </div>
            </div>

            <div class="col">
                <label class="form-label">@Localizer["Book file"]</label>
                <div class="form-outline mb-4">
                    <input type="file" asp-for="BookFile" class="form-control" />
                </div>
            </div>
            <div class="form-outline mb-4 col-12">
                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                <label class="form-label">@Localizer["Description"]</label>
            </div>
            <div class="col text-center"> <!-- Center the button within the form -->
                <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
            </div>
        </div>
    </form>
</div>

<style>
    /* CSS styles specific to the form container */
    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* CSS styles specific to the form */
    .custom-form {
        border: 1px solid black;
        border-width: 1px;
        border-style: solid;
        max-width: 1000px;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
        height: 500px;
        background-color: transparent; /* Set background to transparent */
        border-radius: 10px; /* Round the corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Add a subtle shadow */
        
    }

    /* Add your other form element styles here */
    .form-control {
        width: 100%;
        background-color: #f0f0f0; /* Background color */
        border: none;
        border-radius: 5px; /* Round the input fields */
    }

    .select {
        width: 100%;
    }

    /* Customize button styles */
    .btn-primary {
        background-color: #007bff; /* Button color */
        border: none;
        border-radius: 5px; /* Round the button corners */
        color: #fff; /* Text color */
    }
</style>